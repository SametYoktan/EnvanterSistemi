@model Siparisler

@{
    ViewData["Title"] = "Siparişi Sil";
}

<h2>Siparişi Sil</h2>

<h4>Bu Siparişi silmek istediğinize emin misiniz?</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Musteri Adı</th>
            <th>Sipariş Tarihi</th>
            <th>Aktif</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.SiparisId</td>
            <td>@Model.MusteriAdi</td>
            <td>@Model.SiparisTarihi</td>
            <td>@Model.AktifMi</td>
        </tr>
    </tbody>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SiparisId" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>