@model Kategoriler

@{
    ViewData["Title"] = "Kategori Sil";
}

<h2>Kategori Sil</h2>

<h4>Bu kategoriyi silmek istediğinize emin misiniz?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.KategoriId</dd>

        <dt class="col-sm-2">Kategori Adı</dt>
        <dd class="col-sm-10">@Model.KategoriAdi</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="KategoriId" />
        <button type="submit" class="btn btn-danger">Evet, Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>