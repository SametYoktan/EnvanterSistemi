@model Kategoriler

@{
    ViewData["Title"] = "Kategori Sil";
}

<h2>Kategori Sil</h2>

<h4>Bu kategoriyi silmek istediğinize emin misiniz?</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>         
            <th>Aktif</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.KategoriId</td>
            <td>@Model.KategoriAdi</td>
            <td>@Model.AktifMi</td>
        </tr>
    </tbody>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="KategoriId" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>