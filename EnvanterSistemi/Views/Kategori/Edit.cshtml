@model Kategoriler

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<h2>Kategori Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="KategoriId" />
    <div class="form-group mb-2">

        <label asp-for="KategoriAdi"></label>
        <input asp-for="KategoriAdi" class="form-control" />
        <span asp-validation-for="KategoriAdi" class="text-danger"></span>

        <label asp-for="AktifMi" class="form-label mb-1">Aktif</label>
        <select asp-for="AktifMi" class="form-select form-select-sm w-auto">
            <option value="true">Evet</option>
            <option value="false">Hayır</option>
        </select>
        <span asp-validation-for="AktifMi" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}