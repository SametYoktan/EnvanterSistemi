@model IEnumerable<Tedarikciler>

@{
    ViewData["Title"] = "Tedarikciler";
}

<h2>Tedarikciler</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Tedarikci Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tedarikci Adı</th>
            <th>Telefon</th>
            <th>Adres</th>
            <th>Aktif</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TedarikciId</td>
                <td>@item.FirmaAdi</td>
                <td>@item.Telefon</td>
                <td>@item.Adres</td>
                <td>@item.AktifMi</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TedarikciId" class="btn btn-sm btn-secondary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.TedarikciId" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>