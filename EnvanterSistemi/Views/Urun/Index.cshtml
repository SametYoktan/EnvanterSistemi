@model IEnumerable<Urunler>

@{
    ViewData["Title"] = "Ürünler";
}

<h2>Ürünler</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Ürün Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün Adı</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Stok Miktarı</th>
            <th>Kategori ID</th>
            <th>Tedarikçi ID</th>
            <th>Aktif</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UrunId</td>
                <td>@item.UrunAdi</td>
                <td>@item.Aciklama</td>
                <td>@item.Fiyat</td>
                <td>@item.StokMiktari</td>
                <td>@item.KategoriId</td>
                <td>@item.TedarikciId</td>
                <td>@item.AktifMi</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UrunId" class="btn btn-sm btn-secondary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.UrunId" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
